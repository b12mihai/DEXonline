<html lang="ro">

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <link href="{$cssRoot}/slick.css" rel="stylesheet" type="text/css">
  <link href="{$cssRoot}/paradigm.css" rel="stylesheet" type="text/css"/>
  <title>{$page_title|escape}</title>
  {include file="common/bits/js.ihtml" dex=1}
</head>

<body id="slickSkinBody">

<div id="fond">
  <div id="antet"><img src="{$imgRoot}/slick/logo.jpg"
    alt="DEX online - Dicționar explicativ al limbii române"></div>
  <div id="meniu">
  <table cellspacing="0">
    <tr>
      <td nowrap {if $slick_selected == "index"}class="sel"{/if}>
        <a href="{$wwwRoot}">prima</a></td>
      <td nowrap><a href="{$wwwRoot}contrib.php">contribuie</a></td>
      <td nowrap {if $slick_selected == "corect"}class="sel"{/if}>
        <a href="{$wwwRoot}corect.php" id="guideLink">corect/greșit</a></td>
      <td nowrap><a href="javascript:abbrevWindow()">abrevieri</a></td>
      <td nowrap {if $slick_selected == "faq"}class="sel"{/if}>
        <a href="{$wwwRoot}faq.php">informații</a></td>
      <td nowrap {if $slick_selected == "tools"}class="sel"{/if}>
        <a href="{$wwwRoot}tools.php">unelte</a></td>
      <td nowrap {if $slick_selected == "top"}class="sel"{/if}>
        <a href="{$wwwRoot}top.php">top</a></td>
      <td width="100%">&nbsp;</td>
      <td nowrap><a href="{$wwwRoot}contact.php">contact</a></td>
    </tr>
  </table>
  </div>
  {if $show_search_box}
    <div id="cautare">
      <form name="frm" method="get" action="{$wwwRoot}search.php">
        Cuvântul:
        <input name="cuv" value="{$cuv|escape}">
        {if $show_search_box && $focus_search_box}
          <script type="text/javascript">
            document.frm.cuv.select();document.frm.cuv.focus();
          </script>
        {/if}
        {include file="common/sourceDropDown.ihtml" urlName=1}
        <input type="submit" value="Caută">
        <a href="javascript:helpWindow()">Ajutor</a>
      </form>
    </div>
  {/if}
  <div id="corp">
	{include file="common/flashMessages.ihtml"}
    {include file=$contentTemplateName}
  </div>
	<div id="footer">
  <table cellspacing="0">
    <tr>
      <td width="100%">&nbsp;</td>
      <td nowrap>utilizator: <span id="user.nick">{$nick|escape}</td>

      {if !$is_mirror}
        {if $is_connected && $is_moderator}
          <td nowrap><a href="{$wwwRoot}admin">moderator</a></td>
        {/if}
        {if $is_connected}
          <td nowrap><a href="{$wwwRoot}account.php">contul meu</a></td>
          <td nowrap><a href="{$wwwRoot}logout.php" id="logoutLink">deconectare</a></td>
        {else}
		  <td nowrap><a href="{$wwwRoot}prefs.php">Preferințe</a></td>
          <td nowrap><a href="{$wwwRoot}login.php" id="loginLink">conectare</a></td>
          <td nowrap><a href="{$wwwRoot}signup.php">înscriere</a></td>
        {/if}
      {/if}
    </tr>
  </table>
  </div>

  <table class="tabelSumar">
    <tr>
      <td>
        Starea curentă: <i>DEX online</i> a învățat
        <b>{$words_total}</b> de definiții, din care
        {$words_last_month} în ultima lună.<br/>
      </td>
      <td class="ingust">
        {include file="common/trafic_ro.ihtml"}
      </td>
      {if $hostedBy}
        <td class="ingust">
          {include file="common/hosting/$hostedBy.ihtml"}
        </td>
      {/if}
    </tr>
  </table>
</div>
</body>
</html>
